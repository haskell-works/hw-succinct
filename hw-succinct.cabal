name:                   hw-succinct
version:                0.0.0.15
synopsis:               Conduits for tokenizing streams.
description:            Please see README.md
homepage:               http://github.com/haskell-works/hw-succinct#readme
license:                BSD3
license-file:           LICENSE
author:                 John Ky
maintainer:             newhoggy@gmail.com
copyright:              2016 John Ky
category:               Data, Conduit
build-type:             Simple
extra-source-files:     README.md
cabal-version:          >= 1.22

library
  hs-source-dirs:       src
  exposed-modules:      HaskellWorks.Data.Succinct
  build-depends:        base                          >= 4          && < 5
                      , attoparsec
                      , bytestring
                      , conduit
                      , containers
                      , hw-bits
                      , hw-conduit
                      , hw-parser
                      , hw-prim                       >= 0.0.3
                      , hw-rankselect                 >= 0.0.0.5
                      , mono-traversable
                      , text
                      , vector
                      , word8

  default-language:     Haskell2010
  ghc-options:          -rtsopts -with-rtsopts=-N -Wall -O2 -Wall -msse4.2

source-repository head
  type:     git
  location: https://github.com/haskell-works/hw-succinct
